        const newHeight = Math.max(scrollHeight, minHeight);
        textarea.style.height = newHeight + 'px';
        
        console.log('Auto-resize:', textarea.value.substring(0, 20), 'scrollHeight:', scrollHeight, 'newHeight:', newHeight);
