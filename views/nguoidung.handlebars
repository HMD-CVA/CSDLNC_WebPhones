        document.getElementById('usersPrevPage')?.addEventListener('click', () => this.goToPage(this.currentPage - 1));
        document.getElementById('usersNextPage')?.addEventListener('click', () => this.goToPage(this.currentPage + 1));

        document.addEventListener('click', (e) => {
            if (e.target.closest('.btn-edit-user')) {
                const id = e.target.closest('.btn-edit-user').getAttribute('data-id');
                const user = this.users.find(u => String(u.id) === String(id));
                this.openUserModal(user);
            }
            if (e.target.closest('.btn-delete-user')) {
                const id = e.target.closest('.btn-delete-user').getAttribute('data-id');
                this.deleteUser(id);
            }
            if (e.target.closest('.btn-toggle-user')) {
                const btn = e.target.closest('.btn-toggle-user');
                const id = btn.getAttribute('data-id');
                const status = btn.getAttribute('data-status');
                this.toggleStatus(id, status);
            }
            if (e.target.closest('.toggle-password')) {
                const btn = e.target.closest('.toggle-password');
                const targetId = btn.getAttribute('data-target');
                const input = document.getElementById(targetId);
                const icon = btn.querySelector('i');
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            }
            if (e.target.closest('#addFieldBtn')) {
                this.addAdditionalField();
            }
            if (e.target.closest('.btn-remove-field')) {
                const fieldItem = e.target.closest('.additional-field-item');
                fieldItem.remove();
            }
        });
        
        // Auto-resize for dynamically added textareas
        document.addEventListener('input', (e) => {
            if (e.target.matches('.additional-field-item .auto-resize')) {
                this.setupAutoResize(e.target);
            }
        });
    }

    addAdditionalField(key = '', value = '') {
        const container = document.getElementById('additionalFieldsContainer');
        const fieldId = Date.now();
        
        const fieldHtml = `
            <div class="additional-field-item" data-field-id="${fieldId}">
                <textarea class="form-control field-key auto-resize" placeholder="T√™n tr∆∞·ªùng (vd: so_thich, avatar)" rows="1">${key}</textarea>
