    if (variantsSection) variantsSection.style.display = 'none';
    
    const modal = new bootstrap.Modal(document.getElementById('voucherModal'));
    modal.show();
}

function toggleDiscountInputs() {
    const discountType = document.getElementById('discountType').value;
    const discountUnit = document.getElementById('discountUnit');
    const maxDiscountGroup = document.getElementById('maxDiscountGroup');
    const discountValue = document.getElementById('discountValue');
    
    if (discountType === 'phantram') {
        discountUnit.textContent = '%';
        maxDiscountGroup.style.display = 'block';
        discountValue.max = '100';
        discountValue.disabled = false;
    } else if (discountType === 'tiengiam') {
        discountUnit.textContent = 'VNĐ';
        maxDiscountGroup.style.display = 'none';
        discountValue.removeAttribute('max');
        discountValue.disabled = false;
    } else if (discountType === 'mienphi') {
        discountUnit.textContent = 'VNĐ';
        maxDiscountGroup.style.display = 'none';
        discountValue.value = '0';
        discountValue.disabled = true;
    }
}

function toggleScopeOptions() {
    const scope = document.getElementById('voucherScope').value;
    const productSection = document.getElementById('productSelectionSection');
    
    if (!productSection) {
        console.warn('productSelectionSection not found');
        return;
    }
    
    if (scope === 'theo_san_pham') {
        productSection.style.display = 'block';
        if (allProducts.length === 0) loadProductsForSelection();
    } else {
        productSection.style.display = 'none';
        // Clear selections when scope changes
        selectedProducts.clear();
        currentProductVariants = [];
        currentProduct = null;
        const variantsSection = document.getElementById('variantsSection');
        if (variantsSection) variantsSection.style.display = 'none';
        updateSelectedProductsTable();
    }
}

async function loadProductsForSelection() {
    try {
        const response = await fetch('/api/sanpham');
        if (!response.ok) throw new Error('Failed to load products');
        
        const data = await response.json();
        const products = data.data?.sanphams || data.sanphams || data;
        
        const productSelect = document.getElementById('productSelect');
        productSelect.innerHTML = '<option value="">-- Chọn sản phẩm để xem variants --</option>';
        
        products.forEach(product => {
            const option = document.createElement('option');
            option.value = product.id;
            option.textContent = `${product.ten_san_pham} (${product.ma_sku})`;
            option.dataset.product = JSON.stringify(product);
            productSelect.appendChild(option);
        });
        
    } catch (error) {
        console.error('Error loading products:', error);
        Swal.fire('Lỗi', 'Không thể tải danh sách sản phẩm', 'error');
    }
}

async function loadProductVariants(product) {
    try {
        currentProduct = product;
        
        if (!product.mongo_detail_id) {
            Swal.fire('Thông báo', `Sản phẩm "${product.ten_san_pham}" chưa có thông tin MongoDB`, 'info');
            const variantsSection = document.getElementById('variantsSection');
            if (variantsSection) variantsSection.style.display = 'none';
            return;
        }

        const mongoResponse = await fetch(`/api/mongodb-details/${product.mongo_detail_id}`);
        if (!mongoResponse.ok) throw new Error('Failed to fetch MongoDB details');
        
        const mongoDetails = await mongoResponse.json();
        let variantCombinations = mongoDetails.variant_combinations || [];
        
        if (variantCombinations.length === 0) {
            Swal.fire('Thông báo', `Sản phẩm "${product.ten_san_pham}" chưa có variant`, 'info');
            const variantsSection = document.getElementById('variantsSection');
            if (variantsSection) variantsSection.style.display = 'none';
            return;
        }

        // Map variants with product info and use variant_id from MongoDB
        currentProductVariants = variantCombinations.map((v, index) => {
            const variantId = v.variant_id || product.id;
            const isDefault = v.is_default === true;
            
            return {
                index: index,
                variantId: variantId,  // MongoDB variant_id
                productId: product.id,
                productName: product.ten_san_pham,
                variantName: v.name || (isDefault ? 'Mặc định' : `Variant ${index + 1}`),
                attributes: v.attributes || {},
                price: v.price || product.gia_ban || 0,
                stock: v.stock || product.ton_kho || 0,
                isDefault: isDefault,
                link_avatar: mongoDetails.link_avatar || '/image/default-product.png'
            };
        }).filter(v => !v.isDefault);
        
        console.log('📦 Loaded variants from MongoDB:', currentProductVariants);
        console.log('✅ Number of variants (excluding default):', currentProductVariants.length);
        
        if (currentProductVariants.length === 0) {
            Swal.fire('Thông báo', `Sản phẩm "${product.ten_san_pham}" chỉ có variant mặc định`, 'info');
            const variantsSection = document.getElementById('variantsSection');
            if (variantsSection) variantsSection.style.display = 'none';
            return;
        }

        renderVariantsTable();
        const variantsSection = document.getElementById('variantsSection');
        if (variantsSection) variantsSection.style.display = 'block';
        
    } catch (error) {
        console.error('Error loading product variants:', error);
        Swal.fire('Lỗi', 'Không thể tải variant của sản phẩm', 'error');
    }
}

function renderVariantsTable() {
    const variantsTableBody = document.getElementById('variantsTableBody');
    if (!variantsTableBody) {
        console.warn('variantsTableBody not found in DOM');
        return;
    }
    
    console.log('🎨 Rendering variants table...');
    console.log('📋 Current variants to render:', currentProductVariants);
    console.log('✔️ Already selected products:', Array.from(selectedProducts.keys()));
    
    if (currentProductVariants.length === 0) {
        variantsTableBody.innerHTML = '<tr><td colspan="4" class="text-center">Không có variant</td></tr>';
        return;
    }

    variantsTableBody.innerHTML = currentProductVariants.map((variant) => {
        const fullName = `${variant.productName} - ${variant.variantName}`;
        const attributes = Object.entries(variant.attributes).map(([k, v]) => `${k}: ${v}`).join(', ');
        const formattedPrice = new Intl.NumberFormat('vi-VN').format(variant.price);
        
        // Check if this variant is already in selectedProducts (for edit mode)
        const isAlreadySelected = selectedProducts.has(variant.variantId);
        const isChecked = isAlreadySelected ? 'checked' : '';
        
        return `
            <tr>
                <td class="text-center">
                    <input type="checkbox" class="form-check-input variant-checkbox" 
                           data-index="${variant.index}" ${isChecked}>
                </td>
                <td>
                    <div><strong>${fullName}</strong></div>
                    ${attributes ? `<small class="text-muted">${attributes}</small>` : ''}
                </td>
                <td class="text-end fw-bold">${formattedPrice}₫</td>
                <td class="text-center">
                    <span class="badge ${variant.stock > 0 ? 'badge-success' : 'badge-danger'}">
                        ${variant.stock}
                    </span>
                </td>
            </tr>
        `;
    }).join('');
}

function addVariantsToList() {
    const variantsTableBody = document.getElementById('variantsTableBody');
    if (!variantsTableBody) {
        console.warn('variantsTableBody not found in DOM');
        return;
    }
    
    const checkedBoxes = variantsTableBody.querySelectorAll('.variant-checkbox:checked');
    
    console.log('➕ Adding variants to list...');
    console.log('📝 Number of checked boxes:', checkedBoxes.length);
    
    if (checkedBoxes.length === 0) {
        Swal.fire('Thông báo', 'Vui lòng chọn ít nhất 1 variant', 'info');
        return;
    }

    let addedCount = 0;

    checkedBoxes.forEach(checkbox => {
        const index = parseInt(checkbox.dataset.index);
        const variant = currentProductVariants.find(v => v.index === index);
        
        if (!variant) return;

        if (!selectedProducts.has(variant.variantId)) {
            const variantData = {
                variantId: variant.variantId,  // MongoDB variant_id
                productId: variant.productId,
                productName: variant.productName,
                variantName: variant.variantName,
                attributes: variant.attributes,
                fullName: `${variant.productName} - ${variant.variantName}`,
                price: variant.price,
                stock: variant.stock,
                link_avatar: variant.link_avatar
            };
            console.log('✨ Adding variant to selectedProducts:', variantData);
            selectedProducts.set(variant.variantId, variantData);
            addedCount++;
        }
    });

    console.log('🎯 Total variants now selected:', selectedProducts.size);
    console.log('📊 All selected variants:', Array.from(selectedProducts.values()));

    if (addedCount > 0) {
        updateSelectedProductsTable();
        Swal.fire({
            icon: 'success',
            title: 'Thành công',
            text: `Đã thêm ${addedCount} variant vào danh sách`,
            timer: 1500,
            showConfirmButton: false
        });
    } else {
        Swal.fire({
            icon: 'info',
            title: 'Thông báo',
            text: 'Các variant đã được chọn trước đó',
            timer: 1500,
            showConfirmButton: false
        });
    }
}

function updateSelectedProductsTable() {
    const tbody = document.getElementById('selectedProductsTableBody');
    const count = document.getElementById('selectedProductCount');
    count.textContent = selectedProducts.size;
    
    if (selectedProducts.size === 0) {
        tbody.innerHTML = `
            <tr class="empty-row">
                <td colspan="6" class="text-center py-4">
                    <i class="fas fa-inbox fa-2x mb-2" style="opacity: 0.3;"></i>
                    <p class="text-muted mb-0">Chưa có sản phẩm nào được chọn</p>
                </td>
            </tr>`;
    } else {
        let index = 1;
        tbody.innerHTML = Array.from(selectedProducts.values()).map(item => {
            const attributes = Object.entries(item.attributes || {}).map(([k, v]) => `${k}: ${v}`).join(', ');
            const formattedPrice = new Intl.NumberFormat('vi-VN').format(item.price);
            
            return `
                <tr>
                    <td class="text-center">${index++}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <img src="${item.link_avatar}" alt="${item.productName}" 
