<script>
/**
 * Voucher Management System
 */

let allVouchers = [];
let filteredVouchers = [];
let currentPage = 1;
const itemsPerPage = 10;
let allProducts = [];
let selectedProducts = new Map();
let currentProductVariants = [];
let currentProduct = null;

document.addEventListener('DOMContentLoaded', function() {
    loadVouchers();
    loadProductsForSelection();
    setupEventListeners();
});

function setupEventListeners() {
    const productSearchInput = document.getElementById('productSearchInput');
    if (productSearchInput) {
        productSearchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            const productSelect = document.getElementById('productSelect');
            if (!productSelect) return;
            const options = productSelect.options;
            for (let i = 1; i < options.length; i++) {
                const text = options[i].textContent.toLowerCase();
                options[i].style.display = text.includes(searchTerm) ? '' : 'none';
            }
        });
    }

    const productSelect = document.getElementById('productSelect');
    if (productSelect) {
        productSelect.addEventListener('change', async (e) => {
            const productId = e.target.value;
            
            if (!productId) {
                const variantsSection = document.getElementById('variantsSection');
                if (variantsSection) variantsSection.style.display = 'none';
                return;
            }
            
            const selectedOption = productSelect.options[productSelect.selectedIndex];
            const productData = JSON.parse(selectedOption.dataset.product || '{}');
            await loadProductVariants(productData);
        });
    }

    const selectAllVariants = document.getElementById('selectAllVariants');
    if (selectAllVariants) {
        selectAllVariants.addEventListener('change', (e) => {
            const variantsTableBody = document.getElementById('variantsTableBody');
            if (!variantsTableBody) return;
            const checkboxes = variantsTableBody.querySelectorAll('.variant-checkbox');
            checkboxes.forEach(cb => cb.checked = e.target.checked);
        });
    }

    const addSelectedVariants = document.getElementById('addSelectedVariants');
    if (addSelectedVariants) {
        addSelectedVariants.addEventListener('click', addVariantsToList);
    }

    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            searchVouchers();
        });
    }
}

async function loadVouchers() {
    try {
        console.log('🔄 Loading vouchers...');
        const response = await fetch('/api/vouchers');
        
        if (!response.ok) {
            const errorData = await response.json().catch(() => ({}));
            console.error('❌ API Error:', response.status, errorData);
            throw new Error(errorData.message || `HTTP ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        console.log('✅ Vouchers loaded:', data);
        
        allVouchers = data.vouchers || [];
        filteredVouchers = [...allVouchers];
        
        updateStats();
        renderVouchers();
    } catch (error) {
        console.error('❌ Load Vouchers Error:', error);
        Swal.fire({ 
            icon: 'error', 
            title: 'Lỗi tải dữ liệu', 
            text: error.message || 'Không thể tải danh sách voucher',
            footer: 'Vui lòng kiểm tra console để biết chi tiết'
        });
    }
}

function updateStats() {
    const now = new Date();
    const total = allVouchers.length;
    const active = allVouchers.filter(v => {
        const start = new Date(v.ngay_bat_dau);
        const end = new Date(v.ngay_ket_thuc);
        return v.trang_thai && now >= start && now <= end;
    }).length;
    const used = allVouchers.reduce((sum, v) => sum + (v.da_su_dung || 0), 0);
    const expired = allVouchers.filter(v => new Date(v.ngay_ket_thuc) < now).length;
    
    document.getElementById('totalVouchers').textContent = total;
    document.getElementById('activeVouchers').textContent = active;
    document.getElementById('usedVouchers').textContent = used;
    document.getElementById('expiredVouchers').textContent = expired;
}

function renderVouchers() {
    const tbody = document.getElementById('vouchersTableBody');
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const pageVouchers = filteredVouchers.slice(start, end);
    
    if (pageVouchers.length === 0) {
        tbody.innerHTML = `<tr><td colspan="10" class="empty-state"><div class="empty-icon"><i class="fas fa-ticket-alt"></i></div><div class="empty-content"><h3>Chưa có voucher nào</h3><p>Nhấn "Tạo Voucher Mới" để bắt đầu</p></div></td></tr>`;
    } else {
        tbody.innerHTML = pageVouchers.map(voucher => `
            <tr>
                <td><span class="voucher-code">${voucher.ma_voucher}</span></td>
                <td>${voucher.ten_voucher}</td>
                <td><span class="region-badge">${voucher.ten_vung || voucher.vung_id || 'N/A'}</span></td>
                <td>${renderTypeBadge(voucher.loai_giam_gia)}</td>
                <td><span class="value-display">${formatDiscountValue(voucher)}</span></td>
                <td>${renderScopeBadge(voucher.pham_vi)}</td>
                <td><div class="quantity-info"><span class="quantity-used">${voucher.da_su_dung || 0}</span> / <span class="quantity-total">${voucher.so_luong}</span></div></td>
                <td><div class="time-info">${formatDate(voucher.ngay_bat_dau)}<br>${formatDate(voucher.ngay_ket_thuc)}</div></td>
                <td>${renderStatusBadge(voucher)}</td>
                <td><div class="action-buttons">
                    <button class="btn-action btn-view" onclick="viewVoucher('${voucher.id}')" title="Xem"><i class="fas fa-eye"></i></button>
                    <button class="btn-action btn-edit" onclick="editVoucher('${voucher.id}')" title="Sửa"><i class="fas fa-edit"></i></button>
                    ${voucher.pham_vi === 'theo_san_pham' ? `<button class="btn-action btn-products" onclick="viewVoucherProducts('${voucher.id}')" title="Sản phẩm"><i class="fas fa-box-open"></i></button>` : ''}
                    <button class="btn-action btn-delete" onclick="deleteVoucher('${voucher.id}')" title="Xóa"><i class="fas fa-trash"></i></button>
                </div></td>
            </tr>
        `).join('');
    }
    
    updatePagination();
    document.getElementById('voucherCount').textContent = filteredVouchers.length;
}

function renderTypeBadge(type) {
    const badges = {
        'phantram': '<span class="type-badge phantram">Giảm %</span>',
        'tiengiam': '<span class="type-badge tiengiam">Giảm tiền</span>',
        'mienphi': '<span class="type-badge mienphi">Miễn phí</span>'
    };
    return badges[type] || type;
}

function renderScopeBadge(scope) {
    const labels = {
        'toan_cuc': 'Toàn cục',
        'theo_san_pham': 'Theo sản phẩm',
        'theo_danh_muc': 'Theo danh mục'
    };
    return `<span class="scope-badge">${labels[scope] || scope}</span>`;
}

function renderStatusBadge(voucher) {
    const now = new Date();
    const start = new Date(voucher.ngay_bat_dau);
    const end = new Date(voucher.ngay_ket_thuc);
    
    if (!voucher.trang_thai) return '<span class="status-badge inactive">Tạm dừng</span>';
    if (now < start) return '<span class="status-badge inactive">Chưa bắt đầu</span>';
    if (now > end) return '<span class="status-badge expired">Hết hạn</span>';
    return '<span class="status-badge active">Đang hoạt động</span>';
}

function formatDiscountValue(voucher) {
    if (voucher.loai_giam_gia === 'phantram') return `${voucher.gia_tri_giam}%`;
    if (voucher.loai_giam_gia === 'tiengiam') return formatCurrency(voucher.gia_tri_giam);
    return 'Miễn phí ship';
}

function formatCurrency(amount) {
    return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
}

function formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('vi-VN', { day: '2-digit', month: '2-digit', year: 'numeric' });
}

function updatePagination() {
    const totalPages = Math.ceil(filteredVouchers.length / itemsPerPage);
    const pageNumbersContainer = document.getElementById('pageNumbers');
    
    document.getElementById('prevPageBtn').disabled = currentPage === 1;
    document.getElementById('nextPageBtn').disabled = currentPage >= totalPages;
    
    if (!pageNumbersContainer) return;
    
    // Generate page numbers
    let pageHTML = '';
    const maxVisible = 7; // Maximum visible page numbers
    
    if (totalPages <= maxVisible) {
        // Show all pages if total is small
        for (let i = 1; i <= totalPages; i++) {
            pageHTML += `<button class="page-number ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
        }
    } else {
        // Always show first page
        pageHTML += `<button class="page-number ${currentPage === 1 ? 'active' : ''}" onclick="goToPage(1)">1</button>`;
        
        if (currentPage > 3) {
            pageHTML += `<span class="page-ellipsis">...</span>`;
        }
        
        // Show pages around current page
        let start = Math.max(2, currentPage - 1);
        let end = Math.min(totalPages - 1, currentPage + 1);
        
        for (let i = start; i <= end; i++) {
            pageHTML += `<button class="page-number ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
        }
        
        if (currentPage < totalPages - 2) {
            pageHTML += `<span class="page-ellipsis">...</span>`;
        }
        
        // Always show last page
        pageHTML += `<button class="page-number ${currentPage === totalPages ? 'active' : ''}" onclick="goToPage(${totalPages})">${totalPages}</button>`;
    }
    
    pageNumbersContainer.innerHTML = pageHTML;
}

function changePage(delta) {
    const totalPages = Math.ceil(filteredVouchers.length / itemsPerPage);
    const newPage = currentPage + delta;
    if (newPage >= 1 && newPage <= totalPages) {
        currentPage = newPage;
        renderVouchers();
    }
}

function goToPage(page) {
    const totalPages = Math.ceil(filteredVouchers.length / itemsPerPage);
    if (page >= 1 && page <= totalPages) {
        currentPage = page;
        renderVouchers();
    }
}

function searchVouchers() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    filteredVouchers = allVouchers.filter(v => 
        v.ma_voucher.toLowerCase().includes(searchTerm) ||
        v.ten_voucher.toLowerCase().includes(searchTerm)
    );
    currentPage = 1;
    renderVouchers();
}

function filterVouchers() {
    const statusFilter = document.getElementById('statusFilter').value;
    const typeFilter = document.getElementById('typeFilter').value;
    const scopeFilter = document.getElementById('scopeFilter').value;
    const now = new Date();
    
    filteredVouchers = allVouchers.filter(voucher => {
        if (statusFilter) {
            const start = new Date(voucher.ngay_bat_dau);
            const end = new Date(voucher.ngay_ket_thuc);
            if (statusFilter === 'active' && !(voucher.trang_thai && now >= start && now <= end)) return false;
            if (statusFilter === 'inactive' && !(voucher.trang_thai && now < start)) return false;
            if (statusFilter === 'expired' && now <= end) return false;
        }
        if (typeFilter && voucher.loai_giam_gia !== typeFilter) return false;
        if (scopeFilter && voucher.pham_vi !== scopeFilter) return false;
        return true;
    });
    
    currentPage = 1;
    renderVouchers();
}

function clearFilters() {
    document.getElementById('searchInput').value = '';
    document.getElementById('statusFilter').value = '';
    document.getElementById('typeFilter').value = '';
    document.getElementById('scopeFilter').value = '';
    filteredVouchers = [...allVouchers];
    currentPage = 1;
    renderVouchers();
}

