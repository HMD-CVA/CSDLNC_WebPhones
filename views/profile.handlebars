            // Reload profile sau khi update
            setTimeout(() => loadUserProfile(), 500);
        } else {
            Swal.fire({
                icon: 'error',
                title: 'L·ªói',
                text: result.message || 'Kh√¥ng th·ªÉ c·∫≠p nh·∫≠t th√¥ng tin'
            });
        }
    } catch (error) {
