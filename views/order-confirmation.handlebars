                    </div>
                    <div class="info-item">
                        <span class="label">Ngày đặt:</span>
                        <span class="value" id="orderDate">--/--/----</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Phương thức thanh toán:</span>
                        <span class="value" id="paymentMethod">--</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Phương thức vận chuyển:</span>
                        <span class="value" id="shippingMethod">--</span>
                    </div>
                </div>
            </div>

            <!-- Delivery Address Card -->
            <div class="info-card">
                <h3><i class="fas fa-map-marker-alt"></i> Địa chỉ giao hàng</h3>
                <div class="address-content" id="deliveryAddress">
                    <p class="recipient-name">--</p>
                    <p class="recipient-phone">--</p>
                    <p class="recipient-address">--</p>
                </div>
            </div>

            <!-- Order Items Card -->
            <div class="items-card">
                <h3><i class="fas fa-shopping-bag"></i> Sản phẩm đã đặt</h3>
                <div class="items-list" id="orderItems">
                    <div class="loading">Đang tải...</div>
                </div>
            </div>

            <!-- Order Summary Card -->
            <div class="summary-card">
                <h3><i class="fas fa-calculator"></i> Tổng thanh toán</h3>
                <div class="summary-content">
                    <div class="summary-row">
                        <span>Tổng tiền hàng:</span>
                        <span id="subtotal">0 ₫</span>
                    </div>
                    <div class="summary-row">
                        <span>Phí vận chuyển:</span>
                        <span id="shippingFee">0 ₫</span>
                    </div>
                    <div class="summary-row">
                        <span>Giảm giá (Voucher):</span>
                        <span class="discount" id="discount">-0 ₫</span>
                    </div>
                    <div class="summary-row total">
                        <span>Tổng cộng:</span>
                        <span id="total">0 ₫</span>
                    </div>
                </div>
            </div>

            <!-- Note if any -->
            <div class="note-card" id="noteCard" style="display: none;">
                <h3><i class="fas fa-sticky-note"></i> Ghi chú</h3>
                <p id="orderNote">--</p>
            </div>
        </div>
    </div>
</div>

