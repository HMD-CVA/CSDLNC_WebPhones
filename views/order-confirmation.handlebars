<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const orderId = urlParams.get('orderId');
        const orderCode = urlParams.get('orderCode');
        const isNewOrder = urlParams.get('new') === 'true';

        // Show success notification for new orders
        if (isNewOrder && orderCode) {
            Swal.fire({
                icon: 'success',
                title: 'Đặt hàng thành công!',
                html: `
                    <p>Mã đơn hàng: <strong>${orderCode}</strong></p>
                    <p>Cảm ơn bạn đã đặt hàng tại WebPhones</p>
                `,
                confirmButtonText: 'Xem chi tiết',
                confirmButtonColor: '#667eea',
                timer: 5000,
                timerProgressBar: true
            });
        }

        if (orderId) {
            fetchOrderDetails(orderId);
        } else if (orderCode) {
            // Try to find order by code
            document.getElementById('orderCode').textContent = orderCode;
            document.getElementById('orderCodeInfo').textContent = orderCode;
        }
    });

    async function fetchOrderDetails(orderId) {
        try {
            const response = await fetch(`/api/orders/${orderId}`);
            const data = await response.json();

            if (data.success && data.order) {
                displayOrderDetails(data.order, data.items || []);
            } else {
                throw new Error(data.message || 'Không thể tải thông tin đơn hàng');
            }
        } catch (error) {
            console.error('Error fetching order details:', error);
            Swal.fire({
                icon: 'error',
                title: 'Lỗi',
                text: 'Không thể tải thông tin đơn hàng. Vui lòng thử lại sau.',
                confirmButtonColor: '#667eea'
            });
        }
    }

    function displayOrderDetails(order, items) {
        // Order code
        document.getElementById('orderCode').textContent = order.ma_don_hang;
        document.getElementById('orderCodeInfo').textContent = order.ma_don_hang;

        // Dates
        const createdDate = new Date(order.ngay_tao);
        document.getElementById('orderDate').textContent = formatDate(createdDate);
        document.getElementById('createdDate').textContent = formatDate(createdDate);

        // Payment and shipping
        document.getElementById('paymentMethod').textContent = 
            order.payment_method === 'cod' ? 'Thanh toán khi nhận hàng (COD)' : order.payment_method;
        document.getElementById('shippingMethod').textContent = order.ten_phuong_thuc || '--';

        // Address
        const addressHTML = `
            <p class="recipient-name">${order.ten_nguoi_nhan || '--'}</p>
            <p class="recipient-phone">${order.sdt_nguoi_nhan || '--'}</p>
            <p class="recipient-address">${order.dia_chi_cu_the || '--'}, ${order.ten_phuong_xa || '--'}, ${order.ten_tinh_thanh || '--'}</p>
        `;
        document.getElementById('deliveryAddress').innerHTML = addressHTML;

        // Status timeline
        updateStatusTimeline(order.trang_thai);

        // Items
        displayOrderItems(items);

        // Summary
        document.getElementById('subtotal').textContent = formatCurrency(order.tong_tien_hang);
        document.getElementById('shippingFee').textContent = formatCurrency(order.phi_van_chuyen);
        document.getElementById('discount').textContent = '-' + formatCurrency(order.gia_tri_giam_voucher);
        document.getElementById('total').textContent = formatCurrency(order.tong_thanh_toan);

        // Note
        if (order.ghi_chu_order) {
            document.getElementById('noteCard').style.display = 'block';
            document.getElementById('orderNote').textContent = order.ghi_chu_order;
        }
    }

    function updateStatusTimeline(status) {
        const timelineItems = document.querySelectorAll('.timeline-item');
        const statusMap = {
            'cho_xac_nhan': 0,
            'dang_xu_ly': 1,
            'dang_giao': 2,
            'hoan_thanh': 3
        };

        const activeIndex = statusMap[status] || 0;
        timelineItems.forEach((item, index) => {
            if (index <= activeIndex) {
                item.classList.add('active');
            }
        });
    }

    function displayOrderItems(items) {
        const itemsContainer = document.getElementById('orderItems');
        
        if (!items || items.length === 0) {
            itemsContainer.innerHTML = '<div class="loading">Không có sản phẩm</div>';
            return;
        }

        itemsContainer.innerHTML = items.map(item => `
            <div class="order-item">
                <img src="${item.hinh_anh || '/image/placeholder.png'}" alt="${item.ten_san_pham}" class="item-image">
                <div class="item-info">
                    <div class="item-name">${item.ten_san_pham || '--'}</div>
                    <div class="item-variant">${item.ten_bien_the || ''}</div>
                    <div class="item-quantity">Số lượng: ${item.so_luong || 1}</div>
                </div>
                <div class="item-price">
                    <div class="item-unit-price">${formatCurrency(item.don_gia)}</div>
                    <div class="item-total-price">${formatCurrency(item.thanh_tien)}</div>
                </div>
            </div>
        `).join('');
    }

    function formatDate(date) {
        return new Intl.DateTimeFormat('vi-VN', {
            day: '2-digit',
            month: '2-digit',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        }).format(date);
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN', {
            style: 'currency',
            currency: 'VND'
        }).format(amount || 0);
    }
</script>
