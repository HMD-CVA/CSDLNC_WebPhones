.cps-login-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 250px;
  background: linear-gradient(135deg, #d70018 0%, #ff3b54 50%, #ff1744 100%);
  background-size: 200% 200%;
  animation: gradientShift 8s ease infinite;
  z-index: 0;
}

/* Floating Shapes Background */
.cps-login-wrapper::after {
  content: '';
  position: absolute;
  top: 50px;
  right: 10%;
