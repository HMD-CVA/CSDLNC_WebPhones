<!-- Template Product Card - CellphoneS Style -->
<div class="cps-product-card">
    <!-- Hình ảnh sản phẩm -->
    <a href="/product/{{this.id}}" class="cps-product-link">
        <div class="cps-product-image">
            <img src="{{this.link_anh}}" alt="{{this.ten_san_pham}}" loading="lazy">
            
            <!-- Nhãn giảm giá -->
            {{#if this.is_discount}}
            <div class="cps-discount-badge">
                Giảm {{this.phan_tram_giam}}%
            </div>
            {{/if}}
        </div>

        <!-- Tên sản phẩm -->
        <h3 class="cps-product-name">{{this.ten_san_pham}}</h3>

        <!-- Giá sản phẩm -->
        <div class="cps-price-wrapper">
            <div class="cps-current-price">{{this.gia_ban_formatted}}</div>
            {{#if this.is_discount}}
            <div class="cps-original-price">{{this.gia_niem_yet_formatted}}</div>
            {{/if}}
        </div>

        <!-- Thông tin bổ sung -->
        <div class="cps-product-meta">
            <div class="cps-rating">
                <i class="fas fa-star"></i>
                <span>4.5</span>
                <span class="cps-reviews">({{this.luot_xem}})</span>
            </div>
            <div class="cps-sold">
                <i class="fas fa-box"></i>
                <span>Đã bán {{this.so_luong_ban}}</span>
            </div>
        </div>
    </a>
</div>

<!-- Modal xem nhanh sản phẩm -->
<div class="product-quickview-modal" id="quickviewModal">
  <div class="product-modal-content">
    <span class="product-modal-close">&times;</span>
    <div class="product-modal-body">
      <div class="row">
        <div class="col-md-6">
          <img class="product-modal-image" id="modalProductImage" src="" alt="">
        </div>
        <div class="col-md-6">
          <div class="product-modal-info">
            <h3 id="modalProductName"></h3>
            <p id="modalProductSKU" class="text-muted"></p>
            <div id="modalProductPrice" class="modal-price"></div>
            <div id="modalProductStock" class="modal-stock"></div>
            <div class="modal-actions">
              <button class="btn btn-primary">
                <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ hàng
              </button>
              <button class="btn btn-success">
                <i class="fas fa-bolt me-2"></i> Mua ngay
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    /* CellphoneS Product Card Style */
    .cps-product-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid #e0e0e0;
        display: flex;
        flex-direction: column;
        width: 234px;
        height: 320px;
        position: relative;
        margin: 0 auto;
        cursor: pointer;
    }

    .cps-product-card:hover {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        border-color: #d70018;
        transform: translateY(-4px);
    }

    .cps-product-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        flex: 1;
        height: 100%;
    }

    /* Hình ảnh */
    .cps-product-image {
        position: relative;
        height: 180px;
        background: #f8f8f8;
        overflow: hidden;
        flex-shrink: 0;
    }

    .cps-product-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 8px;
        transition: transform 0.3s ease;
    }

    .cps-product-card:hover .cps-product-image img {
        transform: scale(1.08);
    }

    /* Badges */
    .cps-discount-badge {
        position: absolute;
        top: 8px;
        left: 8px;
        background: linear-gradient(135deg, #d70018 0%, #ff0033 100%);
        color: #fff;
        padding: 5px 10px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 700;
        z-index: 2;
        box-shadow: 0 2px 8px rgba(215, 0, 24, 0.3);
    }

    /* Tên sản phẩm */
    .cps-product-name {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin: 12px 12px 8px;
        line-height: 1.4;
        height: 2.8em;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .cps-product-card:hover .cps-product-name {
        color: #d70018;
    }

    /* Giá */
    .cps-price-wrapper {
        margin: 0 12px 10px;
        display: flex;
        align-items: center;
        gap: 8px;
        flex-wrap: wrap;
    }

    .cps-current-price {
        font-size: 16px;
        font-weight: 700;
        color: #d70018;
    }

    .cps-original-price {
        font-size: 13px;
        color: #999;
        text-decoration: line-through;
        font-weight: 400;
    }

    /* Meta info */
    .cps-product-meta {
        margin: auto 12px 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 11px;
        color: #666;
        padding-top: 10px;
        border-top: 1px solid #f0f0f0;
    }

    .cps-rating {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .cps-rating i {
        color: #ffa500;
        font-size: 12px;
    }

    .cps-rating span:first-of-type {
        font-weight: 600;
        color: #333;
    }

    .cps-reviews {
        color: #999;
        font-size: 10px;
    }

    .cps-sold {
        display: flex;
        align-items: center;
        gap: 4px;
        font-weight: 500;
    }

    .cps-sold i {
        color: #d70018;
        font-size: 11px;
    }

    /* Hover effect overlay */
    .cps-product-card::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 0;
        background: linear-gradient(to top, rgba(215, 0, 24, 0.05), transparent);
        transition: height 0.3s ease;
        pointer-events: none;
    }

    .cps-product-card:hover::after {
        height: 100%;
    }

    /* Responsive */
    @media (max-width: 576px) {
        .cps-product-card {
            height: 300px;
        }

        .cps-product-image {
            height: 160px;
        }

        .cps-product-name {
            font-size: 13px;
            margin: 10px 10px 6px;
        }

        .cps-current-price {
            font-size: 15px;
        }

        .cps-price-wrapper {
            margin: 0 10px 8px;
        }

        .cps-product-meta {
            margin: auto 10px 10px;
            font-size: 10px;
        }
    }
</style>

