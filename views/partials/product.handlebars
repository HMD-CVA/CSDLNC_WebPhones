<script>
  // CellphoneS Style Product Card JavaScript
  // S·ª≠ d·ª•ng event delegation ƒë·ªÉ tr√°nh ƒëƒÉng k√Ω nhi·ªÅu l·∫ßn
  (function() {
    // ƒê·∫£m b·∫£o ch·ªâ ƒëƒÉng k√Ω 1 l·∫ßn
    if (window.cpsCartHandlerRegistered) return;
    window.cpsCartHandlerRegistered = true;
    
    // Event delegation tr√™n document
    document.addEventListener('click', async function(e) {
      const button = e.target.closest('.cps-btn-cart');
      if (!button) return;
      
      e.preventDefault();
      e.stopPropagation();
      
      const productId = button.getAttribute('data-product-id');
      console.log('üõí Th√™m v√†o gi·ªè:', productId);
      
      // Ki·ªÉm tra ƒëƒÉng nh·∫≠p
      const userId = AuthHelper.getUserId();
      if (!userId) {
        alert('Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ th√™m s·∫£n ph·∫©m v√†o gi·ªè h√†ng');
        window.location.href = '/login';
        return;
      }
      
      try {
        // G·ªçi API th√™m v√†o gi·ªè
        const response = await fetch('/api/cart', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            san_pham_id: productId,
            so_luong: 1,
            userId: userId
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Animation hi·ªáu ·ª©ng th√™m v√†o gi·ªè
          const originalHTML = button.innerHTML;
          button.innerHTML = '<i class="fas fa-check"></i>';
          button.style.background = '#28a745';
          button.style.borderColor = '#28a745';
          button.style.color = '#fff';
          
          // C·∫≠p nh·∫≠t badge gi·ªè h√†ng
          if (typeof CartManager !== 'undefined' && CartManager.updateCartBadge) {
            CartManager.updateCartBadge();
          }
          
          setTimeout(() => {
            button.innerHTML = originalHTML;
            button.style.background = '';
            button.style.borderColor = '';
            button.style.color = '';
          }, 1500);
        } else {
          alert(result.message || 'Kh√¥ng th·ªÉ th√™m v√†o gi·ªè h√†ng');
        }
      } catch (error) {
        console.error('L·ªói th√™m v√†o gi·ªè:', error);
        alert('ƒê√£ x·∫£y ra l·ªói khi th√™m v√†o gi·ªè h√†ng');
      }
    });
  })();

  // X·ª≠ l√Ω click v√†o link s·∫£n ph·∫©m
  document.addEventListener('DOMContentLoaded', function() {
    const cpsProductLinks = document.querySelectorAll('.cps-product-link');
    cpsProductLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        // Cho ph√©p click v√†o link tr·ª´ khi click v√†o button
        if (e.target.closest('.cps-actions')) {
          e.preventDefault();
        }
      });
    });
  });
</script>