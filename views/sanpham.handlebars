  // Modal Manager
  class ModalManager {
    constructor(appState) {
      this.modalStack = [];
      this.appState = appState;
    }

    openModal(modalId) {
      const modalElement = document.getElementById(modalId);
      if (!modalElement) return;

      // L∆∞u modal hi·ªán t·∫°i v√†o state
      this.appState.setLastActiveModal(modalId);

      // ƒê√≥ng modal hi·ªán t·∫°i n·∫øu c√≥
      if (this.modalStack.length > 0) {
        const currentModal = bootstrap.Modal.getInstance(document.getElementById(this.modalStack[this.modalStack.length - 1]));
        if (currentModal) {
          currentModal.hide();
        }
      }

      // M·ªü modal m·ªõi
      const modal = new bootstrap.Modal(modalElement);
      modal.show();

      // Th√™m v√†o stack
      this.modalStack.push(modalId);
    }

    closeCurrentModal() {
      if (this.modalStack.length === 0) return;

      const currentModalId = this.modalStack.pop();
      const currentModal = bootstrap.Modal.getInstance(document.getElementById(currentModalId));
      if (currentModal) {
        currentModal.hide();
      }
    }

    goBackToPreviousModal() {
      if (this.modalStack.length <= 1) return;

      // ƒê√≥ng modal hi·ªán t·∫°i
      this.closeCurrentModal();

      // M·ªü modal tr∆∞·ªõc ƒë√≥
      if (this.modalStack.length > 0) {
        const previousModalId = this.modalStack[this.modalStack.length - 1];
        const previousModal = new bootstrap.Modal(document.getElementById(previousModalId));
        previousModal.show();
      }
    }

    getCurrentModal() {
      if (this.modalStack.length === 0) return null;
      return this.modalStack[this.modalStack.length - 1];
    }

    clearStack() {
      this.modalStack = [];
    }

    // Kh√¥i ph·ª•c modal cu·ªëi c√πng t·ª´ state
    restoreLastModal() {
      const lastModalId = this.appState.getLastActiveModal();
      const autoOpenModal = this.appState.getAutoOpenModal();

      // ∆Øu ti√™n m·ªü modal autoOpenModal n·∫øu c√≥
