    function addVariantsToList() {
        const checkedBoxes = variantsTableBody.querySelectorAll('.variant-checkbox:checked');
        
        if (checkedBoxes.length === 0) {
            Swal.fire('Th√¥ng b√°o', 'Vui l√≤ng ch·ªçn √≠t nh·∫•t 1 variant', 'info');
            return;
        }

        let addedCount = 0;
        let updatedCount = 0;
        let errors = [];

        checkedBoxes.forEach(checkbox => {
            const index = parseInt(checkbox.dataset.index);
            const variant = currentProductVariants.find(v => v.index === index);
            
            if (!variant) {
                console.error(`Variant not found for index ${index}`);
                return;
            }

            const flashPriceInput = variantsTableBody.querySelector(`.flash-price-input[data-index="${index}"]`);
            const limitQtyInput = variantsTableBody.querySelector(`.limit-qty-input[data-index="${index}"]`);
            
            const flashPrice = parseFloat(flashPriceInput?.value || 0);
            const limitQty = parseInt(limitQtyInput?.value || 1);
            
            const variantDisplayName = variant.ten_hien_thi || variant.variantName || 'N/A';

            // Validation
            if (!flashPrice || flashPrice <= 0) {
                errors.push(`${variantDisplayName}: Ch∆∞a nh·∫≠p gi√° flash sale`);
                return;
            }

            if (flashPrice >= (variant.price || 0)) {
                errors.push(`${variantDisplayName}: Gi√° flash sale ph·∫£i nh·ªè h∆°n gi√° g·ªëc`);
                return;
            }

            // Check if already exists in tempProductList
            const existingIndex = tempProductList.findIndex(p => p.variantId === variant.variantId);

            const itemData = {
                variantId: variant.variantId || '',  // UUID t·ª´ product_variants.id
                productId: variant.productId || '',
                productName: variant.productName || '',
                variantName: variantDisplayName,
                ma_sku: variant.ma_sku || '',
                site_origin: variant.site_origin || '',
                fullName: `${variant.productName || ''} - ${variantDisplayName}`,
                gia_goc: variant.price || 0,
                gia_flash_sale: flashPrice,
                gioi_han_mua: limitQty,
                so_luong_ton: variant.stock || 0,
                thu_tu: existingIndex !== -1 ? tempProductList[existingIndex].thu_tu : (tempProductList.length + 1),
                trang_thai: 'dang_ban',
                link_avatar: variant.link_avatar || '/image/default-product.png'
            };
            
            console.log(`Adding variant to temp list:`, itemData);

            if (existingIndex !== -1) {
                // Update existing item
                tempProductList[existingIndex] = itemData;
                updatedCount++;
            } else {
                // Add new item
                tempProductList.push(itemData);
                addedCount++;
            }
        });

        if (errors.length > 0) {
            Swal.fire('L·ªói', errors.join('<br>'), 'error');
        }

        if (addedCount > 0 || updatedCount > 0) {
            renderTempProductList();
            updateSelectedCount();
            
            // Reset
            variantsSection.style.display = 'none';
            productSearchInput.value = '';
            productSelect.value = '';
            selectAllVariants.checked = false;
            
            const message = [];
            if (addedCount > 0) message.push(`ƒê√£ th√™m ${addedCount} variant`);
            if (updatedCount > 0) message.push(`ƒê√£ c·∫≠p nh·∫≠t ${updatedCount} variant`);
            
            Swal.fire({
                icon: 'success',
                title: 'Th√†nh c√¥ng',
                text: message.join(', '),
                timer: 2000,
                showConfirmButton: false
            });
        }
    }

