        // Function to auto-resize based on newline count
        function autoResizeByContent(textarea) {
            const content = textarea.value || '';
            const lineCount = (content.match(/\n/g) || []).length + 1; // +1 for the first line
            const lineHeight = 24; // Approximate line height in pixels
            const padding = 24; // Top and bottom padding
            const minHeight = 50; // Minimum height
            
            const calculatedHeight = Math.max(minHeight, (lineCount * lineHeight) + padding);
            textarea.style.height = calculatedHeight + 'px';
        }
        
        // Listen to input event
        moTaTextarea.addEventListener('input', autoResize);
        
        // Also resize on paste
