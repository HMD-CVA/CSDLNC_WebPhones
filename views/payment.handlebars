  .payment-header h1 {
    font-size: 22px;
  }

  .payment-steps {
    flex-wrap: wrap;
  }

  .step-icon {
    width: 40px;
    height: 40px;
    font-size: 16px;
  }

  .step-text {
    font-size: 11px;
  }

  .step-line {
    max-width: 50px;
  }
}
