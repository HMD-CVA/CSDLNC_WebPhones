    editRegionalPrice(id, methodId, regionId, price, estimatedTime, status, methodName, regionName) {
        document.getElementById('regionalPriceModalTitle').textContent = 'Ch·ªânh s·ª≠a c·∫•u h√¨nh v·∫≠n chuy·ªÉn';
