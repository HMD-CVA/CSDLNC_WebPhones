            `;
            
            // Fetch regional pricing for all methods in this region
            const response = await fetch(`/api/shipping-method-regions?regionId=${regionId}`);
            const data = await response.json();
            const regionalPricing = data.data || data;
            
            console.log(`üì¶ Regional pricing for region ${regionId}:`, regionalPricing);
            
            if (!Array.isArray(regionalPricing) || regionalPricing.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center">
                            <div class="empty-state">
                                <div class="empty-icon">
                                    <i class="fas fa-shipping-fast"></i>
                                </div>
                                <div class="empty-content">
                                    <h3>Ch∆∞a c√≥ ph∆∞∆°ng th·ª©c v·∫≠n chuy·ªÉn cho v√πng n√†y</h3>
                                    <p>Vui l√≤ng c·∫•u h√¨nh gi√° v·∫≠n chuy·ªÉn cho v√πng n√†y</p>
                                </div>
                            </div>
                        </td>
                    </tr>
                `;
                return;
            }

            // Render regional shipping methods
            tbody.innerHTML = regionalPricing.map(pricing => {
                const method = this.shippingMethods.find(m => m.id === pricing.phuong_thuc_van_chuyen_id);
                if (!method) return '';
                
                const region = this.regions.find(r => (r.ma_vung || r.id) == pricing.vung_id);
                const regionName = (region ? region.ten_vung : 'N/A').replace(/"/g, '&quot;');
                const estimatedTime = (pricing.thoi_gian_du_kien || '').toString().replace(/"/g, '&quot;');
                
                // Handle boolean status
                const isActive = pricing.trang_thai === true;
                const statusText = isActive ? 'Ho·∫°t ƒë·ªông' : 'T·∫°m ng∆∞ng';
                const statusClass = isActive ? 'active' : 'inactive';
                
                // Format estimated time as "X ng√†y" from INT
                let timeDisplay = 'Ch∆∞a c·∫≠p nh·∫≠t';
                if (pricing.thoi_gian_du_kien != null) {
                    const days = parseInt(pricing.thoi_gian_du_kien);
                    if (!isNaN(days) && days > 0) {
                        timeDisplay = `${days} ng√†y`;
                    }
                }
                
                return `
                    <tr>
                        <td>${method.ten_phuong_thuc}</td>
                        <td>${method.mo_ta || 'N/A'}</td>
                        <td>${this.formatCurrency(pricing.gia_van_chuyen)}</td>
                        <td>${timeDisplay}</td>
                        <td>
                            <span class="status-badge ${statusClass}">
                                ${statusText}
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn-action-modern btn-primary btn-sm" 
                                        onclick="shippingManager.editRegionalPrice('${pricing.id}', '${pricing.phuong_thuc_van_chuyen_id}', '${pricing.vung_id}', ${pricing.gia_van_chuyen}, ${pricing.thoi_gian_du_kien || 'null'}, ${isActive}, '${method.ten_phuong_thuc.replace(/'/g, "\\'") }', '${regionName}')" 
                                        title="S·ª≠a">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn-action-modern btn-danger btn-sm" 
                                        onclick="shippingManager.deleteRegionalPrice('${pricing.id}')" 
                                        title="X√≥a">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
            
        } catch (error) {
            console.error(`‚ùå Error loading regional shipping methods for region ${regionId}:`, error);
            const tbody = document.getElementById(`region-${regionId}-tbody`);
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center">
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-exclamation-circle"></i>
                            </div>
                            <div class="empty-content">
                                <h3>L·ªói t·∫£i d·ªØ li·ªáu</h3>
                                <p>${error.message}</p>
                            </div>
                        </div>
                    </td>
                </tr>
            `;
        }
    }

    setupEventListeners() {
        document.querySelector('[data-bs-target="#shippingMethodModal"]').addEventListener('click', () => {
            this.resetMethodForm();
            document.getElementById('methodModalTitle').textContent = 'Th√™m ph∆∞∆°ng th·ª©c v·∫≠n chuy·ªÉn';
        });
    }

    resetMethodForm() {
        document.getElementById('methodId').value = '';
        document.getElementById('methodName').value = '';
        document.getElementById('methodDescription').value = '';
        document.getElementById('methodBaseCost').value = '';
        document.getElementById('methodStatus').value = 'Ho·∫°t ƒë·ªông';
    }

    async editMethod(methodId) {
        const method = this.shippingMethods.find(m => m.id === methodId);
        if (!method) return;

        document.getElementById('methodId').value = method.id;
        document.getElementById('methodName').value = method.ten_phuong_thuc;
        document.getElementById('methodDescription').value = method.mo_ta || '';
        document.getElementById('methodBaseCost').value = method.chi_phi_co_ban;
        document.getElementById('methodStatus').value = method.trang_thai === true ? '1' : '0';
        document.getElementById('methodModalTitle').textContent = 'Ch·ªânh s·ª≠a ph∆∞∆°ng th·ª©c v·∫≠n chuy·ªÉn';

        const modal = new bootstrap.Modal(document.getElementById('shippingMethodModal'));
        modal.show();
    }

    async saveMethod() {
        const id = document.getElementById('methodId').value;
        const data = {
            ten_phuong_thuc: document.getElementById('methodName').value,
            mo_ta: document.getElementById('methodDescription').value,
            chi_phi_co_ban: parseFloat(document.getElementById('methodBaseCost').value),
            trang_thai: parseInt(document.getElementById('methodStatus').value) // Convert '1'/'0' to 1/0
        };

        try {
            const url = id ? `/api/shipping-methods/${id}` : '/api/shipping-methods';
            const method = id ? 'PUT' : 'POST';
            
            const response = await fetch(url, {
                method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                Swal.fire('Th√†nh c√¥ng', id ? 'C·∫≠p nh·∫≠t ph∆∞∆°ng th·ª©c th√†nh c√¥ng' : 'Th√™m ph∆∞∆°ng th·ª©c th√†nh c√¥ng', 'success');
                bootstrap.Modal.getInstance(document.getElementById('shippingMethodModal')).hide();
                await this.loadShippingMethods();
            } else {
                throw new Error('L·ªói khi l∆∞u ph∆∞∆°ng th·ª©c');
            }
        } catch (error) {
            Swal.fire('L·ªói', error.message, 'error');
