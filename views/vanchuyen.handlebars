            `;
            return;
        }

        tbody.innerHTML = this.shippingMethods.map(method => {
            const isActive = method.trang_thai === true;
            const statusText = isActive ? 'Ho·∫°t ƒë·ªông' : 'T·∫°m ng∆∞ng';
            const statusClass = isActive ? 'active' : 'inactive';
            
            return `
            <tr>
                <td>${method.ten_phuong_thuc}</td>
                <td>${method.mo_ta || 'N/A'}</td>
                <td>${this.formatCurrency(method.chi_phi_co_ban)}</td>
                <td>
