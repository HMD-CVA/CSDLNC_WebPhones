<div class="orders-container">
    <div class="container">
        <div class="orders-header">
            <h1><i class="fas fa-shopping-bag"></i> Đơn hàng của tôi</h1>
        </div>

        <!-- Filter Tabs -->
        <div class="filter-tabs">
            <button class="filter-tab active" data-status="all">
                <i class="fas fa-list"></i> Tất cả
            </button>
            <button class="filter-tab" data-status="cho_xac_nhan">
                <i class="fas fa-clock"></i> Chờ xác nhận
            </button>
            <button class="filter-tab" data-status="dang_xu_ly">
                <i class="fas fa-box"></i> Đang xử lý
            </button>
            <button class="filter-tab" data-status="dang_giao">
                <i class="fas fa-truck"></i> Đang giao
            </button>
            <button class="filter-tab" data-status="hoan_thanh">
                <i class="fas fa-check-circle"></i> Hoàn thành
            </button>
            <button class="filter-tab" data-status="huy">
                <i class="fas fa-times-circle"></i> Đã hủy
            </button>
        </div>

        <!-- Orders List -->
        <div class="orders-list" id="ordersList">
            <div class="loading-state">
                <i class="fas fa-spinner fa-spin"></i>
                <p>Đang tải đơn hàng...</p>
            </div>
        </div>

        <!-- Empty State -->
        <div class="empty-state" id="emptyState" style="display: none;">
            <i class="fas fa-shopping-bag"></i>
            <h3>Chưa có đơn hàng nào</h3>
            <p>Bạn chưa có đơn hàng nào. Hãy khám phá và mua sắm ngay!</p>
            <a href="/" class="btn-shop-now">
                <i class="fas fa-shopping-cart"></i> Mua sắm ngay
            </a>
        </div>
    </div>
</div>

<style>
