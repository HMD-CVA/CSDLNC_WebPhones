        margin-bottom: 30px;
    }

    .orders-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #1f2937;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .orders-header h1 i {
        color: #667eea;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 25px;
        overflow-x: auto;
        padding-bottom: 5px;
    }

    .filter-tab {
        padding: 12px 24px;
        background: white;
        border: 2px solid #e5e7eb;
        border-radius: 25px;
        font-weight: 600;
        font-size: 14px;
        color: #6b7280;
        cursor: pointer;
