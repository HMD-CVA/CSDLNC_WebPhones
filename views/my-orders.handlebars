            padding: 10px 16px;
            font-size: 13px;
        }

        .order-card-header,
        .order-card-footer {
            flex-direction: column;
            align-items: flex-start;
        }

        .order-info-left {
            width: 100%;
        }

        .order-actions {
            width: 100%;
        }

        .btn-view-detail,
        .btn-cancel {
            flex: 1;
        }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/auth-helper.js"></script>
<script>
    let currentStatus = 'all';
    let allOrders = [];

    document.addEventListener('DOMContentLoaded', async function() {
        // Check auth
        const user = AuthHelper.getCurrentUser();
        console.log('Current user:', user);
        
        if (!user || !user.id) {
            console.log('User not logged in, redirecting...');
            Swal.fire({
                icon: 'warning',
                title: 'Vui lòng đăng nhập',
                text: 'Bạn cần đăng nhập để xem đơn hàng',
                confirmButtonColor: '#667eea'
            }).then(() => {
                window.location.href = '/login?redirect=/donhang';
            });
            return;
        }

        // Setup filter tabs
        const filterTabs = document.querySelectorAll('.filter-tab');
        filterTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                filterTabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                currentStatus = tab.dataset.status;
                displayOrders();
            });
        });

        // Load orders
        await loadOrders(user.id);
    });

    async function loadOrders(userId) {
        try {
            console.log('Loading orders for userId:', userId);
            const response = await fetch(`/api/orders?userId=${userId}`);
            console.log('Response status:', response.status);
            
            const data = await response.json();
            console.log('Response data:', data);

            if (data.success) {
                allOrders = data.orders || [];
                console.log('Orders loaded:', allOrders.length);
                displayOrders();
            } else {
                throw new Error(data.message || 'Không thể tải đơn hàng');
            }
        } catch (error) {
            console.error('Error loading orders:', error);
            document.getElementById('ordersList').innerHTML = `
                <div class="loading-state">
                    <i class="fas fa-exclamation-triangle" style="color: #ef4444;"></i>
                    <p>Không thể tải danh sách đơn hàng. Vui lòng thử lại sau.</p>
                    <p style="color: #ef4444; font-size: 14px; margin-top: 10px;">${error.message}</p>
                </div>
            `;
        }
    }

    function displayOrders() {
        const ordersList = document.getElementById('ordersList');
        const emptyState = document.getElementById('emptyState');

        // Filter orders
        const filteredOrders = currentStatus === 'all' 
            ? allOrders 
            : allOrders.filter(order => order.trang_thai === currentStatus);

        if (filteredOrders.length === 0) {
            ordersList.style.display = 'none';
            emptyState.style.display = 'block';
            return;
        }

        ordersList.style.display = 'flex';
        emptyState.style.display = 'none';

        ordersList.innerHTML = filteredOrders.map(order => `
            <div class="order-card">
                <div class="order-card-header">
                    <div class="order-info-left">
                        <span class="order-code">${order.ma_don_hang}</span>
                        <span class="order-date">${formatDate(order.ngay_tao)}</span>
                    </div>
                    <span class="order-status status-${order.trang_thai}">
                        ${getStatusText(order.trang_thai)}
                    </span>
                </div>
                <div class="order-card-body">
                    <div class="order-items">
                        ${(order.items || []).slice(0, 2).map(item => `
                            <div class="order-item">
                                <img src="${item.hinh_anh || '/image/placeholder.png'}" alt="${item.ten_san_pham}" class="item-image">
                                <div class="item-details">
                                    <div class="item-name">${item.ten_san_pham}</div>
                                    <div class="item-variant">${item.ten_bien_the || ''}</div>
                                    <div class="item-quantity">Số lượng: ${item.so_luong}</div>
                                </div>
                                <div class="item-price">${formatCurrency(item.thanh_tien)}</div>
                            </div>
                        `).join('')}
                        ${(order.items || []).length > 2 ? `
                            <div style="text-align: center; color: #6b7280; font-size: 14px; margin-top: 10px;">
                                và ${(order.items || []).length - 2} sản phẩm khác
                            </div>
                        ` : ''}
                    </div>
                </div>
                <div class="order-card-footer">
                    <div class="order-total">
                        <span class="total-label">Tổng thanh toán:</span>
                        <span class="total-amount">${formatCurrency(order.tong_thanh_toan)}</span>
                    </div>
                    <div class="order-actions">
                        <a href="/order-confirmation?orderId=${order.id}" class="btn-view-detail">
                            <i class="fas fa-eye"></i> Xem chi tiết
                        </a>
                        ${order.trang_thai === 'cho_xac_nhan' ? `
                            <button class="btn-cancel" onclick="cancelOrder('${order.id}', '${order.ma_don_hang}')">
                                <i class="fas fa-times"></i> Hủy đơn
                            </button>
                        ` : ''}
                    </div>
                </div>
            </div>
        `).join('');
    }

    function getStatusText(status) {
        const statusMap = {
            'cho_xac_nhan': 'Chờ xác nhận',
            'dang_xu_ly': 'Đang xử lý',
            'dang_giao': 'Đang giao',
            'hoan_thanh': 'Hoàn thành',
            'huy': 'Đã hủy'
        };
        return statusMap[status] || status;
    }

    function formatDate(dateString) {
        const date = new Date(dateString);
        return new Intl.DateTimeFormat('vi-VN', {
            day: '2-digit',
            month: '2-digit',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        }).format(date);
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN', {
            style: 'currency',
            currency: 'VND'
        }).format(amount || 0);
    }

    async function cancelOrder(orderId, orderCode) {
        const result = await Swal.fire({
            icon: 'warning',
            title: 'Hủy đơn hàng?',
            html: `Bạn có chắc muốn hủy đơn hàng <strong>${orderCode}</strong>?`,
            showCancelButton: true,
            confirmButtonText: 'Hủy đơn',
            cancelButtonText: 'Đóng',
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6b7280'
        });

        if (result.isConfirmed) {
            try {
                const response = await fetch(`/api/orders/${orderId}/cancel`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Đã hủy đơn hàng',
                        confirmButtonColor: '#667eea'
                    });
                    // Reload orders
                    const user = AuthHelper.getCurrentUser();
                    await loadOrders(user.id);
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: error.message || 'Không thể hủy đơn hàng',
                    confirmButtonColor: '#667eea'
                });
            }
        }
    }
</script>
